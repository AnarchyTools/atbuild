(package
 :name "xcs"

     :tasks {
        :build-lib {
            :tool "atllbuild"
            :source ["src/**.swift"]
            :output-type "static-library"
            :name "Foo"
            :compile-options ["-enable-testing"]
        }
        :build-tests {
            :tool "atllbuild"
            :source ["test/**.swift"]
            :output-type "executable"
            :name "footests"
            :dependencies ["build-lib"]
            :xctestify true
            :xctest-strict true
            :link-with ["Foo.a"]
        }
        :run-tests {
            :tool "xctestrun"
            :test-executable ".atllbuild/products/footests"
            :dependencies ["build-tests"]
        }
     }
)